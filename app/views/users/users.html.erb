<h1>List of users </h1>

<form action="/insert_user_record">
  <label for="username">Username</label>
  <input id="username" name="input_username" type="text" value="Enter a username...">

  <label for="private">Private?</label>
  <input id="private" name="input_private" type="checkbox">

  <button>Add user</button>
</form>

<table border="1">
  <tr>
    <th> 
      Username
    </th>

    <th> 
      Private?
    </th>

    <th> 
    
    </th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td> 
        <%= user.username %>
      </td>

      <td> 
        <% if user.private == true %>
          Yes
        <% else %>
          No
        <% end %>
      </td>

      <td> 
        <a href="/users/<%=user.username %>">
        Show details
        </a>
      </td>
    </tr>
  <% end %>

</table>